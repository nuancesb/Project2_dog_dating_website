<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<%= devise_error_messages! %>

<div class="row">
  <p>Please complete the registration form:</p>
  <div class="field, large-3 columns">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field, large-3 columns">
      <%= f.label :password %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field, large-3 columns">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
  </div>
</div>
<div class="row">
  <div class="field, large-3 columns">
    <%= f.label :nickname, 'Your nickname on our site:' %> 
    <%= f.text_field :nickname, onchange: "if ($('#session_user').nickname nil) { alert('Your Nickname cannot be empty!'); }" %>
  </div>
  <div class="field, large-3 columns">
    <%= f.label :first_name, 'First Name: ' %> 
    <%= f.text_field :first_name %>
  </div>
  <div class="field, large-3 columns">
    <%= f.label :last_name %> 
    <%= f.text_field :last_name %>
  </div>
  <div class="field, large-3 columns">
    <%= f.label :gender %> 
    <%= f.select :role, [["Male", "male"],["Female","female"],["Trans","trans"],["Other","other"]] %>
  </div>
</div>
<div class="row">
  <p>Enter your home location (postcode or latitude and longitude):</p>
  <div class="field, large-3 columns">
    <%= f.label :postcode %> 
    <%= f.text_field :postcode %>
  </div>
  <div class="field, large-3 columns">
    <%= f.label :home_lat, 'Latitude: ' %> 
    <%= f.text_field :home_lat %>
  </div>
  <div class="field, large-3 columns">
    <%= f.label :home_long, 'Longitude: ' %> 
    <%= f.text_field :home_long %>
  </div>
</div>
<div class="row">
  <div class="field,large-12 columns">
      <%= f.label :description, 'Your profile description: ' %> 
      <%= f.text_field :description %>
  </div>
</div>   
<div class="row">
  <div class="field,large-3 columns">
    <%= f.label :image, 'Select the image file or url:' %><br>
    <%= f.file_field :image %>
    <%= f.text_field :remote_image_url, value: nil, placeholder: 'or paste url here' %>
  </div>
</div>

<div class="row">
  <div class="actions, large-12 columns">
    <%= f.submit "Sign up" %>

    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>

