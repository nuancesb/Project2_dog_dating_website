<div class='row'>
  <div class="large-12 columns">
    <h3><%= @conversation.subject %></h3>
  </div>
</div>
<div class='row'>
  <div class="large-6 columns">
    Conversation between: <%= @conversation.participants.map(&:name).to_sentence %>
  </div>
  <div class="large-6 columns">
    <%= link_to "Back to my messages", conversations_path, class: "tiny button" %>
    <%= link_to "Delete conversation", {:controller => "conversations", :action => 
      "trash", :id => @conversation.id}, :title=> "Delete", :method=>'post',  data: {confirm: "Are you sure you want to delete this conversation? Once it's gone, it's gone!"}, class: "tiny button"  %>
  </div>
</div>
<div class='row'>
  </div>
  <p><%= render @conversation.messages %></p>
  <p>Reply to this conversation:</p>
  <%= form_tag reply_conversation_path(@conversation) do %>
  <%= text_area_tag :body %>
  <%= submit_tag 'Send message', class: "alert button"%>
  <%= submit_tag 'Clear reply box', type: :reset, class: "button"%>

  <% end %>

