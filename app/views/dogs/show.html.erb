<div class="large-4 columns">
  <div class="row">
    <div class="large-12 columns">
      <%= image_tag(@dog.picture.detail.url, width: "80em", alt: "Dog image") %>
    </div>  
  </div> 
  <div class="row">
    <div class="large-12 columns">
      <br>
      Listen to me:
      <%= audio_tag(@dog.sound, autoplay: false, controls: true, class: "dog_sound")  %>
      <br>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <% if  @dog.user_id == current_user.id %>
        <%= link_to 'Edit', edit_dog_path(@dog), class: "button tiny" %>
      <% end %>
      <%= link_to 'Back', :back, class: "button tiny" %>
      <% if  @dog.user_id != current_user.id %>
      <%= link_to 'Message my Owner!', new_user_conversation_path(@dog.user_id), class: "button tiny alert" %>
      <% end %>
    </div>
  </div>
</div>
<div class="large-8 columns">
  <div class="row">
    <div class="large-3 columns">
      <h4><%= @dog.name %></h4>
    </div>
    <div class="large-3 columns">
      <h4><%= @dog.sex %></h4>
    </div>
    <div class="large-3 columns">
     <h4>Breed: <%= @dog.breed %></h4>
    </div>
    <div class="large-3 columns">
      <h4><%= @dog.dob %></h4>  
    </div>
  </div>
  <div class="row">
    <div class="large-9 columns">
      <%= @dog.description %>
    </div>
  </div>
  <div class="row">
    <div class="large-9 columns">
      <h4>Dog owner: 
      <%= link_to User.find(@dog.user_id).nickname, user_path(@dog.user_id) %></h4>
    </div>
  </div>
</div>
</div>
<div class="row">
  <br>
</div>

</div>

